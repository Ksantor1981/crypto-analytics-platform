# Production Environment Variables
# Copy this file to .env.production and fill in the values

# ===== SECURITY (CRITICAL!) =====
SECRET_KEY=your_32_byte_secret_key_here_generate_with_openssl_rand_hex_32
TRADING_ENCRYPTION_KEY=your_32_byte_encryption_key_here

# ===== DATABASE =====
DATABASE_URL=postgresql://username:password@host:5432/crypto_analytics
# DO NOT USE SQLITE IN PRODUCTION!

# ===== REDIS =====
REDIS_URL=redis://:password@redis-host:6379/0

# ===== TELEGRAM API =====
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_SESSION_NAME=crypto_analytics_production

# ===== EXTERNAL APIS =====
# CoinGecko API (if using Pro)
COINGECKO_API_KEY=your_coingecko_api_key

# Binance API (if needed)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key

# ===== PAYMENT PROCESSING =====
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===== EMAIL CONFIGURATION =====
EMAIL_SMTP_HOST=smtp.yourmailprovider.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your_email@yourdomain.com
EMAIL_SMTP_PASSWORD=your_email_password
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Crypto Analytics Platform

# Alternative: SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ===== DOMAIN CONFIGURATION =====
FRONTEND_URL=https://crypto-analytics.yourdomain.com
BACKEND_URL=https://api.yourdomain.com
ML_SERVICE_URL=https://ml.yourdomain.com

# ===== MONITORING =====
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3001

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===== SSL/TLS =====
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/private.key

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS=60
AUTH_RATE_LIMIT_REQUESTS=3
RATE_LIMIT_WINDOW=3600

# ===== CORS ORIGINS (comma-separated) =====
BACKEND_CORS_ORIGINS=https://crypto-analytics.yourdomain.com,https://app.yourdomain.com
