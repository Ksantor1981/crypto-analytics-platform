        }
      ]
    },
    {
      "name": "Health Checks", 
      "item": [
        {
          "name": "Backend Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Database Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/health/db",
              "host": ["{{base_url}}"],
              "path": ["health", "db"]
            }
          }
        }
      ]
    }
  ]
} 