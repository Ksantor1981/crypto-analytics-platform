              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"plan_type\": \"premium\",\n  \"stripe_payment_method_id\": \"pm_test_123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/subscriptions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "subscriptions"]
            }
          }
        }
      ]
    },
    {
      "name": "ML Service",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{ml_service_url}}/health",
              "host": ["{{ml_service_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Predict Signal",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"symbol\": \"BTCUSDT\",\n  \"signal_type\": \"BUY\",\n  \"entry_price\": 45000.0,\n  \"stop_loss\": 44000.0,\n  \"take_profit\": 46000.0,\n  \"channel_accuracy\": 0.75\n}"
            },
            "url": {
              "raw": "{{ml_service_url}}/predict",
              "host": ["{{ml_service_url}}"],
