              "raw": "{\n  \"channel_id\": 1,\n  \"symbol\": \"BTCUSDT\",\n  \"signal_type\": \"BUY\",\n  \"entry_price\": 45000.0,\n  \"stop_loss\": 44000.0,\n  \"take_profit_1\": 46000.0,\n  \"take_profit_2\": 47000.0,\n  \"take_profit_3\": 48000.0\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/signals",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "signals"]
            }
          }
        },
        {
          "name": "Get Signal by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/signals/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "signals", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Subscriptions",
      "item": [
        {
          "name": "Get User Subscriptions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/subscriptions/me",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "subscriptions", "me"]
            }
          }
        },
        {
          "name": "Create Subscription",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
