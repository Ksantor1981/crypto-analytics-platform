# ========================================
# Crypto Analytics Platform - Environment Variables
# ========================================
# Скопируйте этот файл как .env и заполните реальными значениями

# ========================================
# DATABASE CONFIGURATION
# ========================================
POSTGRES_DB=crypto_analytics
POSTGRES_USER=crypto_analytics_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
POSTGRES_PORT=5432
DATABASE_URL=postgresql://crypto_analytics_user:CHANGE_THIS_PASSWORD_IN_PRODUCTION@localhost:5432/crypto_analytics

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION
REDIS_PORT=6379
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION@localhost:6379/0

# ========================================
# SECURITY & AUTHENTICATION
# ========================================
# Генерируйте новый SECRET_KEY для каждого окружения
# Используйте: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_USE_OPENSSL_RAND_HEX_32

# ========================================
# STRIPE PAYMENT CONFIGURATION
# ========================================
# Получите ключи в Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_CHANGE_THIS_TO_REAL_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_CHANGE_THIS_TO_REAL_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_THIS_TO_REAL_WEBHOOK_SECRET

# ========================================
# EXCHANGE API KEYS
# ========================================
# Получите ключи в соответствующих биржах
BYBIT_API_KEY=CHANGE_THIS_TO_REAL_BYBIT_API_KEY
BYBIT_SECRET_KEY=CHANGE_THIS_TO_REAL_BYBIT_SECRET_KEY
BINANCE_API_KEY=CHANGE_THIS_TO_REAL_BINANCE_API_KEY
BINANCE_SECRET_KEY=CHANGE_THIS_TO_REAL_BINANCE_SECRET_KEY

# ========================================
# TELEGRAM INTEGRATION
# ========================================
# Получите токен у @BotFather в Telegram
TELEGRAM_API_ID=21073808
TELEGRAM_API_HASH=CHANGE_THIS_TO_REAL_TELEGRAM_API_HASH
TELEGRAM_BOT_TOKEN=CHANGE_THIS_TO_REAL_TELEGRAM_BOT_TOKEN

# REDDIT API CONFIGURATION
# ========================================
# Получите ключи в Reddit Developer Portal
REDDIT_CLIENT_ID=CHANGE_THIS_TO_REAL_REDDIT_CLIENT_ID
REDDIT_CLIENT_SECRET=CHANGE_THIS_TO_REAL_REDDIT_CLIENT_SECRET
REDDIT_REDIRECT_URI=http://localhost:8000
REDDIT_USER_AGENT=crypto app by /u/Ksantor1981

# ========================================
# ML SERVICE CONFIGURATION
# ========================================
ML_SERVICE_URL=http://localhost:8001
MODEL_CACHE_ENABLED=true

# ========================================
# FRONTEND CONFIGURATION
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ML_API_URL=http://localhost:8001
NEXT_PUBLIC_ENV=development

# ========================================
# APPLICATION CONFIGURATION
# ========================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# ========================================
# DOCKER PORTS (опционально)
# ========================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
ML_SERVICE_PORT=8001
NGINX_PORT=80
NGINX_SSL_PORT=443

# ========================================
# MONITORING & NOTIFICATIONS
# ========================================
# Slack webhook для уведомлений (опционально)
SLACK_WEBHOOK_URL=CHANGE_THIS_TO_REAL_SLACK_WEBHOOK_URL

# ========================================
# PRODUCTION SETTINGS
# ========================================
# Для production измените на:
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
